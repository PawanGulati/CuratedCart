{
  "name": "curatedcart",
  "version": "1.0.0",
  "description": "backend for stripe",
  "main": "server.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\" ",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only-dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PawanGulati/CuratedCart.git"
  },
  "author": "pawan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PawanGulati/CuratedCart/issues"
  },
  "homepage": "https://github.com/PawanGulati/CuratedCart#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "stripe": "^8.44.0"
  }
}
